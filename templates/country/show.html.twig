{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Country Details</h1>
        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td><img src="{{ country.flag }}" alt="{{ country.name }} flag" width="100"></td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ country.code }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ country.population }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ country.region }}</td>
            </tr>
            <tr>
                <th>Subregion</th>
                <td>{{ country.subregion }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ country.capital }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ country.area }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>{{ country.languages | join(', ') }}</td>
            </tr>
            <tr>
                <th>Borders</th>
                <td>{{ country.borders | join(', ') }}</td>
            </tr>
            <tr>
                <th>NativeName</th>
                <td>{{ country.nativeName }}</td>
            </tr>
            <tr>
                <th>NumericCode</th>
                <td>{{ country.numericCode }}</td>
            </tr>
            <tr>
                <th>Currencies</th>
                <td>
                    {% if country.currencies %}
                        {% set currencyNames = [] %}
                        {% for currency in country.currencies %}
                            {% set currencyNames = currencyNames|merge([currency.name]) %}
                        {% endfor %}
                        {{ currencyNames | join(', ') }}
                    {% else %}
                        N/A
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Timezones</th>
                <td>{{ country.timezones | join(', ') }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('app_country_index') }}" class="btn btn-secondary">Back to list</a>
        <a href="{{ path('app_country_edit', {'id': country.id}) }}" class="btn btn-warning">Edit</a>
        {{ include('country/_delete_form.html.twig') }}
    </div>
{% endblock %}
