{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ country.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ country.code }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ country.population }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ country.flag }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ country.region }}</td>
            </tr>
            <tr>
                <th>Subregion</th>
                <td>{{ country.subregion }}</td>
            </tr>
            <tr>
                <th>Capital</th>
                <td>{{ country.capital }}</td>
            </tr>
            <tr>
                <th>Area</th>
                <td>{{ country.area }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>{{ country.languages ? country.languages|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Borders</th>
                <td>{{ country.borders ? country.borders|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>NativeName</th>
                <td>{{ country.nativeName }}</td>
            </tr>
            <tr>
                <th>NumericCode</th>
                <td>{{ country.numericCode }}</td>
            </tr>
            <tr>
                <th>Currencies</th>
                <td>{{ country.currencies ? country.currencies|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Timezones</th>
                <td>{{ country.timezones ? country.timezones|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_country_index') }}">back to list</a>

    <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>

    {{ include('country/_delete_form.html.twig') }}
{% endblock %}
